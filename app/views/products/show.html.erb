
<h1><%= @product.name %></h1>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @product.quantity %>
</p>

<p>
  <strong>Price:</strong>
  <%= number_to_currency(@product.price, unit: 'KES', format: '%u %n') %>
</p>

<p>
  <strong>Size:</strong>
  <%= @product.size %>
</p>

<p>
  <strong>Opening Stock:</strong>
  <%= @product.opening_stock %>
</p>

<p>
  <strong>Closing Stock:</strong>
  <%= @product.closing_stock %>
</p>

<p>
  <strong>Money In:</strong>
  <% if @product.opening_stock.present? && @product.closing_stock.present? && @product.price.present? %>
    <%= number_to_currency((@product.opening_stock.to_i - @product.closing_stock.to_i) * @product.price.to_f, unit: 'KES', delimiter: ',') %>
  <% else %>
    N/A
  <% end %>
</p>

<%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-primary' %> |
<%= link_to 'Back', products_path, class: 'btn btn-secondary' %>

