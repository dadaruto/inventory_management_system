<h1>New Debt</h1>

<%= form_with(model: @debt, local: true) do |form| %>
  <% if @debt.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@debt.errors.count, "error") %> prohibited this debt from being saved:</h2>
      <ul>
        <% @debt.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :amount %>
    <%= form.number_field :amount, step: :any %>
  </div>

  <div class="actions">
    <%= form.submit "Create Debt" %>
  </div>
<% end %>
<%= link_to 'Back', debts_path %>

