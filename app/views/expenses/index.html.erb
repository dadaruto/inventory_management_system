<h1>Expenses</h1>

<%= link_to 'New Expense', new_expense_path, class: 'btn btn-info' %>

<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.description %></td>
        <td><%= number_to_currency(expense.amount, unit: "KES") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Back', root_path %>

